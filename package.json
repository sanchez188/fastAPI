{
  "name": "sumo-sushi-mcp",
  "version": "3.0.0",
  "description": "MCP Server para Sumo Sushi - Fastify Modular",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && npm start",
    "dev:watch": "tsc --watch & nodemon dist/server.js",
